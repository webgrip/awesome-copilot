{
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.formatOnSave": true
  },
  "editor.rulers": [
    100
  ],
  "files.associations": {
    "*.agent.md": "chatagent",
    "*.instructions.md": "instructions",
    "*.prompt.md": "prompt"
  },
  "yaml.schemas": {
    "./.schemas/collection.schema.json": "*.collection.yml"
  }
}
